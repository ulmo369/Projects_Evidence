<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/id_splash_logo"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:scrollbarSize="4dp"
        android:src="@drawable/logo_r_sf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esencia Patrimonio"
        android:textColor="#E91E63"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_splash_logo" />

    <TextView
        android:id="@+id/id_splash_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Por el patrimonio"
        android:textColor="@color/teal_200"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_splash_title"
        />





</androidx.constraintlayout.widget.ConstraintLayout>