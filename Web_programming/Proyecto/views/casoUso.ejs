                                            <option selected value=" <%=CasoUso.status_caso%>" class="font-weight-bold"> <%=CasoUso.status_caso%> </option>
                                            <option style="color:rgb(0, 255, 55)" value="Terminado" class="font-weight-bold" >Terminado</option>
                                            <option style="color:rgb(211, 22, 22)" value="Pendiente" class="font-weight-bold" >Pendiente</option>
                                        </select>
                                        
                                    </td>

                                    <td class = "text-center">
                                        <a onMouseover="this.style.cursor='pointer'" role="button" title="Modificar" data-toggle="tooltip" data-placement="top" onclick="modificar_caso('<%=id%>', '<%= CasoUso.id_caso_de_uso %>', '<%= CasoUso.nombre_caso_de_uso %>', '<%= CasoUso.iteracion %>', '<%= CasoUso.epic %>', '<%= CasoUso.valor %>')">
