                                <th class = "text-center" scope="col">Iteración</th>
                                <th class = "text-center" scope="col">Epic</th>
                                <th class = "text-center" scope="col">AP</th>
                                <th class = "text-center" scope="col">Status</th>
                                <th class = "text-center" scope="col">&nbsp</th>
                                <th class = "text-center" scope="col">&nbsp</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% for (let CasoUso of Casos) { %>

                                <tr>
                                    
                                    <td class = "text-center" style="width: 15rem"> <%= CasoUso.nombre_caso_de_uso %> </td>
                                    <td class = "text-center" style="width: 10rem"style="width: 10rem"> <%= CasoUso.nombre_iteracion %> </td>
                                    <td class = "text-center" style="width: 10rem"> <%= CasoUso.epic %> </td>
                                    <td class = "text-center" style="width: 10rem"> <%= CasoUso.valor %> </td>

                                    <input type="hidden" id="<%= CasoUso.id_caso_de_uso %>" value ="<%= CasoUso.id_caso_de_uso %>">
                                    <td style="width: 10rem">
